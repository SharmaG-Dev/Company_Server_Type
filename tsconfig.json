{
    "compilerOptions": {
      "lib": ["esnext"],
      "outDir": "dist",
      "baseUrl": "src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node16",
      "typeRoots": ["./node_modules/@types", "./src/types/v1/*"],
      "paths": {
        "types/*": ["types/*"],
        "routes/*": ["routes/*"],
        "config/*": ["config/*"],
        "controller/*": ["helper/v1/controller/*"],
        "funcs/*": ["helper/v1/funcs/*"],
        "validator/*": ["helper/v1/Validator/*"],
        "utils/*": ["helper/v1/utils/*"],
        "middleware/*": ["helper/v1/middleware/*"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.test.ts"]
  }
  